<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvOptions"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:elevation="@dimen/elevation_cardview"
    CardView:cardUseCompatPadding="true"
    android:layout_marginBottom="16dp"
    CardView:cardBackgroundColor="@color/colorPrimaryDark"
    CardView:cardCornerRadius="@dimen/corner_radius_cardview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/card_view_padding">
        <ImageView
            android:id="@+id/imgCVOptions"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="@dimen/cardview_image_padding"
            android:src="@drawable/cast_album_art_placeholder"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tvCVOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cardview_options"
            android:textColor="@android:color/background_light"
            android:layout_gravity="center"
            android:textSize="@dimen/cardview_name_size"/>

    </LinearLayout>
</android.support.v7.widget.CardView>
